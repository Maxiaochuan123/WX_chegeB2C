/* 轮播图 */
swiper-container{  
  position: relative;  
}  
.swiper-container .swiper{  
  height: 400rpx;  
}  
.swiper-container .dots{  
  position: absolute;  
  left: 24rpx;
  top: 320rpx;
  display: flex;
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 8rpx;  
  height: 8rpx;  
  background: rgba(255, 255, 255, 0.5);  
  border-radius: 8rpx;  
  transition: all .2s; 
}  
.swiper-container .dots .dot.active{  
  width: 17rpx; 
  height: 8rpx;
  background: #fff;  
}
.swiperImg{
  z-index: 0;
  position: absolute;
}
.swiperText{
  position: absolute;
  bottom: 30rpx;
  left: 24rpx;
  color: #fff;
  width: 600rpx; 
  font-size: 24rpx;
}

/*  列表  */
.list{
  width: 100%;
  height: 150rpx;
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list .listImage{
  width: 250rpx;
  height: 150rpx;
  border-radius: 14rpx;
  background-color: #666;
  margin: 0 20rpx 0 24rpx;
}
.list .listDescribe{
  width: 420rpx;
  height: 140rpx;
  margin-right: 40rpx; 
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.listDescribe>text{
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333;
}
.listDescribe view{
  font-size: 22rpx;
  color: #999;
  display: flex;
  align-items: baseline;
  align-content: flex-end;
}
.listDescribe view icon{
  font-size: 20rpx;
}
.comments{
  margin-left: 11rpx;
}
.commentsSource{
  margin-left: 40rpx;
}

/* 头像  */
.myBanner{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  height: 428rpx;
  position: relative;
}
.backImg{
  width: 100%;
  height: 100%;
  z-index: 0;
  position: absolute
}
.myHeadIs{
  width: 155rpx;
  height: 155rpx;
  border-radius: 50%;
  background-color: #FFF;
  z-index: 1;
}
.loginStatusDescription{
  font-size: 24rpx;
  margin-top: 12rpx;
  color: #FFF;
  z-index: 1;
}

/* 收藏 and 预约  */
.myCollectionAndAppointment{
  display: flex;
  box-sizing: border-box;
  width: 100%;
  background-color: #FFF;
}
.collection{
  border-right: 1px solid #ECECEC;
}
.collection,.toMakeAnAppointment{
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: space-around;
}
.collection image{
  width: 64rpx;
  height: 64rpx;
  margin: 27rpx 0 22rpx 0;
}
.toMakeAnAppointment image{
  width: 54rpx;
  height: 60rpx;
  margin: 27rpx 0 22rpx 0;
}
.collection text, .toMakeAnAppointment text{
  margin-top: 4rpx; 
  font-size: 24rpx;
  margin-bottom: 22rpx;
}
/* 右箭头 */
.arrow{
  width: 10px;
  height: 10px;
  border-top: 1px solid #666;
  border-right: 1px solid #666;
  transform: rotate(45deg);
}

/* 列表 */
.list{
  height: 88rpx;
  margin-top: 20rpx;
  background-color: #FFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.describe{
  display: flex;
  align-items: center;
  margin-left: 25rpx;
}
.describe image{
  width: 38rpx;
  height: 40rpx;
	vertical-align:middle;
}
.describe text{
  font-size: 30rpx;
  margin-left: 12rpx;
}
.describe .customerService{
  position: absolute;
  height: 88rpx;
  width: 100%;
  background-color: transparent;
}
.describe .customerService::after{
   border: none;
}
.list .listArrow{
  display: flex;
  align-items: center;
  margin-right: 25rpx;
}
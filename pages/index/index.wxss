/*  搜索栏  */
.searchBox{
  width: 100%;
  height: 90rpx;
  position: fixed;
  /* background-color: rgba(0,0,0,0.3); */
  opacity: 1;
  z-index: 1;
  display: flex;
  align-items: center;
}
.search{
  width: 627rpx;
  height: 50rpx;
  border-radius: 14rpx;
  margin: 0 40rpx 0 40rpx;
  display: flex;
  align-items: center; 
  align-content: center;
  padding-top: 8rpx;
  /* background-color: rgba(255, 255, 255, 0.33); */
}
.search .searchInput{
  color: #666;
  width: 430rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
  display: block;
}
.search .searchIcon icon{
  width: 29rpx;
  height: 29rpx;
  margin: 0 10rpx 0 25rpx;
  color: #666;
  display: flex;
  align-items: center; 
  align-content: center;
}
.search .clear{
  font-size: 29rpx;
  background-color: rgba(0,0,0,0.3);
}
.call{
  width: 50rpx;
  height: 50rpx;
  margin-right: 28rpx; 
  display: flex;
  align-items: center; 
  align-content: center;
}
.call icon{
  font-size: 50rpx;
}
.callWhite{
  color: #fff;
}
.callBlack{
  color: #666;
}


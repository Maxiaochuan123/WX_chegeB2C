/*  轮播图  */

.slideshow {
  height: 400rpx;
}

/*  九宫格  */

.sudokuBox {
  background-color: #FFF;
  padding: 27rpx 0;
}

.sudoku{
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
}
.sudoku view{
  display: flex;
   flex-flow: column nowrap; 
   align-items: center;
}
.sudoku image {
  width: 95rpx;
  height: 95rpx;
  line-height: 150rpx;
  text-align: center;
  background-color: #eee;
  border-radius: 50%;
}

 .sudoku text {
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  margin-top: 10rpx;
} 

/* tab选项卡 */
.brandTab{
  margin-top: 20rpx;
  height: 300rpx;
  background-color: #FFF;
}
.swiper-tab{
  width: 100%;
  text-align: center; 
  line-height: 80rpx;
}
.swiper-tab-list,.tabPlaceholderBox{
  font-size: 30rpx; 
  display: inline-block; 
  width: 13%; 
  color: #333;
  line-height:48rpx;
}
.tabPlaceholderBox{
  width: 118rpx;
}
.on{
  color: #00A8E8;
  border-bottom: 5rpx solid #00A8E8;
}
.swiper-box{ 
  display: block;
  width: 100%;
  overflow: hidden;
 }
.swiper-box view{ 
  text-align: center; 
}
.brandImgBox,brandPriceBox{
  height: 100%;
}
 .brandImgBox>view:first-child image,brandPriceBox>view:first-child text{
  margin-top: 30rpx;
} 
.brandImg,.brandPrice{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.brandImg image{
  width: 58rpx;
  height: 58rpx;
  margin-top: 38rpx;
  background-color: #eee;
}
.brandPrice text{
  width: 86rpx;
  height: 20rpx;
  font-size: 22rpx;
  margin-top: 38rpx;
  color: #333;
}
.brandPrice text:last-child{
  width: 110rpx;
}

/* 好车推荐 */
.goodCarRecommended{
  margin: 20rpx 0 0;
  padding: 29rpx 24rpx 0;
  height: 100%;
  background-color: #FFF;
}
  /* 右箭头 */
.arrow{
  width: 16rpx;
  height: 16rpx;
  border-top: 1px solid #666;
  border-right: 1px solid #666;
  transform: rotate(45deg);
}

  /* 导航 */
.list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.describe{
  display: flex;
  align-items: center;
}
.describe image{
  width: 140rpx;
  height: 28rpx;
  background-color: #eee;
}
.list .listArrow{
  display: flex;
  align-items: center;
}
.list .listArrow .arrowText{
  font-size: 24rpx;
  color: #666;
}

/* 推荐的车列表 */
.recommendCarList{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
}
.recommendCarList > view{
  width: 340rpx;
  height: 338rpx;
  border-radius: 14rpx;
  background-color: #fff;
  margin-top: 22rpx;
  overflow: hidden; 
  box-shadow: 0 4rpx 10rpx rgba(231, 231, 231, 0.65);
}
.recommendCarList view image{
    width: 100%;
   height: 186rpx; 
}
.carsModels{
  font-size: 24rpx;
  font-weight: bold;
  color: #494949;  
  line-height: 32rpx;  
  display: block;
  height: 68rpx; 
  margin-top: -10rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.buttomBox{
  display: flex;
  justify-content: space-between;
}
.recommendCarList view .price, .theAppearanceOfInterior{
  font-size: 20rpx;
  color: #666;
  display: block;
  padding: 0 10rpx;
}
 .theAppearanceOfInterior{
  padding-top: 10rpx;
 }
.recommendCarList view .price{
  text-align: right;
}
.theOriginalPrice{
  font-size: 26rpx;
  color: #FA7921;
  padding-right: 10rpx;
}
.lodding{
  padding-top: 16px; 
  background-color: #fff;
}
